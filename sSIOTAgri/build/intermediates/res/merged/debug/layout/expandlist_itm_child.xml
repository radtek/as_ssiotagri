<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/buddy_listview_child_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/popmenu_facility" />

    <TextView
        android:id="@+id/buddy_listview_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/buddy_listview_child_avatar"
        android:singleLine="true"
        android:text="设施名称"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/buddy_listview_child_trends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buddy_listview_child_title"
        android:layout_below="@id/buddy_listview_child_title"
        android:layout_marginBottom="5dp"
        android:text="设施详细信息"
        android:textSize="12sp" />

</RelativeLayout>