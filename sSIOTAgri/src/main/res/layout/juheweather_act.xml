<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:verney="http://schemas.android.com/apk/res/com.verney.weather"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_sunny_day"
    android:id="@+id/background">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_action_refresh"
            android:id="@+id/shuaxin"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_action_liebiao"
            android:id="@+id/liebiao"/>
    </RelativeLayout>
        <TextView 
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:text="城市"
            android:id="@+id/city_Tv"
            android:textColor="#ffffff"
            android:drawableRight="@drawable/icon_submit_lbs_unselected"
            android:drawablePadding="5dp"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/ima_Tv"/>
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="天气状况"
            android:textSize="20sp"
            android:id="@+id/info_Tv"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"/>
        </LinearLayout>
        
        
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="温度"
            android:textSize="60sp"
            android:id="@+id/temperature_Tv"
            android:textColor="#ffffff"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天日期"
            android:id="@+id/data_Tv"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日农历"
            android:textSize="20sp"
            android:id="@+id/moon_Tv"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="发布时间"
                android:id="@+id/time_Tv"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFC8D6"
        android:layout_marginTop="5dp"/>

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未来五天天气"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFC8D6"
        android:layout_marginTop="5dp"/>
    
    <com.ssiot.remote.weather.FutureWeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_1_View"
        android:layout_marginTop="5dp"/>
    <com.ssiot.remote.weather.FutureWeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_2_View"
        android:layout_marginTop="5dp"/>
    <com.ssiot.remote.weather.FutureWeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_3_View"
        android:layout_marginTop="5dp"/>
    <com.ssiot.remote.weather.FutureWeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_4_View"
        android:layout_marginTop="5dp"/>
    <com.ssiot.remote.weather.FutureWeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_5_View"
        android:layout_marginTop="5dp"/>
    
     <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFC8D6"
        android:layout_marginTop="5dp"/>
    
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:id="@+id/today_info"
         android:layout_marginTop="5dp"
         android:textSize="20sp"
         android:textColor="#ffffff"/>
     <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFC8D6"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="20dp"
             android:text="空调："
             android:textColor="#ffffff"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:id="@+id/kongtiao"
             android:textColor="#ffffff"/>
     </LinearLayout>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="运动："
             android:layout_marginLeft="20dp"
             android:textColor="#ffffff"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:id="@+id/yundong"
             android:textColor="#ffffff"/>
     </LinearLayout>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="紫外线："
             android:textColor="#ffffff"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:id="@+id/ziwaixian"
             android:textColor="#ffffff"/>
     </LinearLayout>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="穿衣："
             android:layout_marginLeft="15dp"
             android:textColor="#ffffff"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:id="@+id/chuanyi"
             android:textColor="#ffffff"/>
     </LinearLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFC8D6"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>
    </LinearLayout>
        </ScrollView>
</LinearLayout>
